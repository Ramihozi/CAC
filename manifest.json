{
    "name": "Type and Talk",
    "version": "1.0",
    "description": "You type it talks, for those who have limited ability to see what they type.",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
	"content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
		"run_at": "document_end",
        "js":  ["content.js"]
    }],
	"permissions": [
		"activeTab"
	],
	"web_accessible_resources": [
		"Sound/LetterA.mp3",
		"Sound/LetterB.mp3"
	],
    "manifest_version": 2
  }
